<% provide(:title, 'Login') %>
<h1>ログイン</h1>
<div class="row">
  <div class="col-md-6  mx-auto">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label 'メールアドレス' %>
      <%= f.email_field :email, class: 'form-control', id: 'form' %>

      <%= f.label 'パスワード' %>
      <%= f.password_field :password, class: 'form-control', id: 'form' %>


      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "新規登録はこちら", signup_path %>
  </div>
</div>